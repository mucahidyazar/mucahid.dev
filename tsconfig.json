{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/components": ["src/view/components/index.ts"],
      "@/containers": ["src/view/containers/index.ts"],
      "@/constants": ["src/constants/index.ts"],
      "@/layout": ["src/view/layout/index.ts"],
      "@/data": ["src/data/index.ts"],
      "@/hooks": ["src/hooks/index.ts"],
      "@/store/*": ["src/store/*"],
      "@/ui": ["src/view/ui/index.ts"],
      "@/utilities": ["src/utilities/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/store/**/*.ts",
    "src/view/**/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
